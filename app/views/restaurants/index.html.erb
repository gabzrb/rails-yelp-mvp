
<h1>Restaurants</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Adress</th>
    <th>Reviews</th>
  </tr>
  </thead>

   <tbody>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.address %></td>
      <td><%= link_to 'Show', restaurant_path(restaurant)%></td>
    </tr>
   <% end %>
 </tbody>
</table>

